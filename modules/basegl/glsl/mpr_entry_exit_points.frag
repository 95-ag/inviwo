uniform vec3 p;
uniform vec3 n;
uniform vec3 u;
uniform vec3 r;
uniform float offset;

in vec2 uv;

void main() {
	// Viewport coordinates in [0,1]
    float x = uv.x;
    float y = uv.y;

    vec3 bottomLeft = p - 0.5f * r - 0.5f * u;

	// Apply offset that controls the slab thickness
    bottomLeft += offset * n;

    FragData0 = vec4(bottomLeft + x * r + y * u, 1.0f);
}